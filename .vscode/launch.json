    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Variable Scope Program",
            "program": "${workspaceFolder}/variableScope.js",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Functions Program",
            "program": "${workspaceFolder}/MyPrograms/tsFunctions.js",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Loops Program",
            "program": "${workspaceFolder}/loops.js",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Main Program",            
            "program": "${workspaceFolder}/MyPrograms/main.ts", 
            "skipFiles": [
                "<node_internals>/**"
            ],      
            "preLaunchTask": "tsc: build - tsconfig.json",     
            "outFiles": ["${workspaceFolder}/**/*.js"],
            "console": "integratedTerminal"
        }
    ]
}